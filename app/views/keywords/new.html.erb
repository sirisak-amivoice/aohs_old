<% content_for :submenu do %>
  <div id="submenu">
    <table width="100%">
      <tr>
        <td align="left">
          <ul>
            <li><%= link_image_tag('Back','back.png',{:controller=>'keywords',:action => 'index'}) %></li>
          </ul>
        </td>
        <td align="right">

        </td>
      </tr>
    </table>
  </div>
<% end %>

<div id="div-block-keyword">

<div class="div-form-default-style1">
  <table class="tblfrm" width="100%" cellpadding="0" cellspacing="0">
    <tr>
      <td><span class="span-form-title">New Keyword</span></td>
    </tr>
    <tr>
      <td><span class="span-form-name">Keyword infomation</span></td>
    </tr>
    <tr>
      <td>
        <% form_for(@keyword) do |f| %>
        <%= display_frm_error(flash[:message]) %>
          <table class="tbl-frm-details" cellpadding="0" cellspacing="0">
            <tr>
              <td valign="top" width="150px"><label>Name:</label></td>
              <td><%= text_field_tag :keyword_group,"",{:size => 50,:maxsize => 100} %><span class="span-require">*</span>
			  <br><span class="note">Name must be contain only alphabet, special charactor</span></td>
            </tr>
            <tr>
              <td valign="top" width="150px"><label>Pattern:</label></td>
              <td><%= f.text_field :name ,:size => 50,:maxsize => 100 %><span class="span-require">*</span>
			  <br><span class="note">Pattern must be contain only alphabet without space and special charactor</span></td>
            </tr>
            <tr>
              <td><label>Type:</label></td>
              <td>
                <%= f.radio_button(:keyword_type, "n", {:checked=>true}) %> NG Word
                <%= f.radio_button(:keyword_type, "m") %> Must Word
                <%= f.radio_button(:keyword_type, "a") %> Action Word
              </td>
            </tr>
            <tr>
              <td></td>
              <td><%= submit_tag "Create keyword",{:class => 'btnAccept'} %></td>
            </tr>
            </table>
        <% end %>
      </td>
    </tr>
  </table>
</div></div>
