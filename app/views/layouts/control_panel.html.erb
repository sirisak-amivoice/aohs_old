<% $LAYOUT = "control_panel" %>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<head>
  <meta http-equiv="content-type" content="text/html;charset=utf-8" />
  <meta name="description" content="<%= Aohs::WEB_TITLE_NAME %>" />
  <meta name="author" content="<%= Aohs::WEB_AUTHOR %>" />
  <title><%= Aohs::WEB_TITLE_NAME %> <%=Aohs::WEB_VERSION %> - <%= controller.controller_name %>.<%= controller.action_name %></title>
  <link rel="shortcut icon" href="<%=Aohs::SITE_ROOT %>/images/favicon.ico"/>
  <!-- CSS -->
  <%= stylesheet_link_tag 'base' %>
  <%= stylesheet_link_tag 'table' %>
  <%= stylesheet_link_tag 'qtip' %>
  <%#= stylesheet_src_path '/jquery/jquery-ui-1.8.6.custom/css/ui-lightness/jquery-ui-1.8.6.custom.css' %>  
  <%= stylesheet_src_path '/jquery/jquery-ui-1.7.2/css/redmond/jquery-ui-1.7.2.custom.css' %>
  <%= stylesheet_link_tag 'cssform' %>
  <%= stylesheet_link_tag 'will_paginate' %>  
  <!-- JS -->
  <%#= javascript_src_path '/jquery/js/jquery-1.4.2.min.js' %>  
  <%= javascript_src_path '/jquery/js/jquery-1.3.2.min.js' %>
  <%#= javascript_src_path '/jquery/jquery-ui-1.8.6.custom/js/jquery-ui-1.8.6.custom.min.js' %>  
  <%= javascript_src_path '/jquery/jquery-ui-1.7.2/js/jquery-ui-1.7.2.custom.min.js' %>
  <%= javascript_src_path 'strftime-min.js' %>
  <%= javascript_src_path '/jquery/jquery.qTip/qTip.js' %>
  <%= javascript_src_path '/jquery/js/jquery.numeric.js' %>
  <%= javascript_src_path 'application.js' %>
   
  <script type="text/javascript">
    $(document).ready(function(){
      $.ui.dialog.defaults.bgiframe = true;
      $("#msg_alert").dialog({
        modal: true,
        buttons:{"OK":function(){$(this).dialog("close")}}
      });
    });

    function sysMessage(msg){
       $.ui.dialog.defaults.bgiframe = true;
       $("#sysDialog").dialog('destroy');
       $("#sysDialog").html(msg);
       $("#sysDialog").dialog({
        modal: true,
        title: "Message :",   
        buttons:{"OK":function(){$(this).dialog("close")}}
      });
    }
  </script>
  <%= yield :header %>
</head>
<body>
<div id="flash-info">
  <% if flash.has_key?(:error) %>
    <div id="msg_alert" title="AmiVoice Operator's Help">
      <% if flash.has_key?(:notice) %>
        <%= flash[:notice] %>
      <% else %>
        <%= flash[:error] %>
      <% end %>
    </div>
  <% end %>
</div>
<%= render :partial => 'shared/dialog' %>
<div id="delDialog" style="display:none"></div>
<div id="sysDialog" style="display:none"></div>
<div class="div-container">
	<!-- header -->
	<div class="div-page-header">
		<table cellpadding="0" cellspacing="0" width="100%;">
			<tr>
				<td><span class="hd-name"><a href="<%=url_for({:controller => 'top_panel',:action => 'index'}) %>">AmiVoice<sup>&reg;</sup>Operator's Help System</a></span></td>
				<td align="right"><%= render :partial => 'shared/account_bar' %></td>
			</tr>
			<tr>
				<td colspan="2"><%= render :partial => 'shared/ctrl_panel_menus' %></td>
			</tr>
		</table>
	</div>
	<!-- body -->
	<div class="div-page-body">
		<!-- sub menu -->
		<%= yield :submenu %>		
		<div id="body" class="body"><%= yield %></div>
	</div>	
	<!-- footer -->
	<div class="div-page-footer">
		
	</div>	
</div>
</body>
</html>
