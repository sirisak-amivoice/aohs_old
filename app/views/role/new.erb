<div id="div-block-role">

<div class="div-form-default-style1">
  <table class="tblfrm" width="100%" cellpadding="0" cellspacing="0">
    <tr>
      <td><span class="span-form-title">New Role</span></td>
    </tr>
    <tr>
      <td><span class="span-form-name">Role infomation</span></td>
    </tr>
    <tr>
      <td class="frmmain">
        <% form_for :role, :url => {:controller => "role",:action => 'create'} do |f| %>
          <%=display_frm_error(flash[:message]) %>  
          <table  class="tbl-frm-details" cellpadding="0" cellspacing="0">
            <tr>
              <td width="130px"><label for="group">Role :</label></td>
              <td><%= f.text_field(:name,:size => 25,:maxsize => 50) %><span class="require">*</span></td>
            </tr>
            <tr>
              <td><label for="group">Description :</label></td>
              <td><%= f.text_field(:description,:size => 25,:maxsize => 50) %></td>
            </tr>
            <tr>
              <td></td>
              <td><%= submit_tag "Add role",{:class => 'btnAccept'} %>&nbsp;&nbsp;<%#= submit_tag "Reset",{:type => 'reset',:class => 'btnAccept'} %></td>
            </tr>
            </table>
        <% end %>
      </td>
    </tr>
  </table>
</div>
</div>