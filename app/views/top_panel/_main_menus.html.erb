		</table>
		</div>
        <% end %>

		<% if link_permission_require('customers','index') %>
		<div class="div-sub-mn" url="<%=url_for(:controller => 'customers' ,:action => 'index')%>">
		<table cellpadding="0" cellspacing="0">
			<tr>
				<td rowspan="2" width="30px" align="center"><%= image_tag "menu_icon/customer.png" %></td>
				<td><span class="mn-name">Customer Calls Search</span></td>
			</tr>
			<tr>
				<td><span class="title2">View customer's calls and manage customer details</span></td>
			</tr>
		</table>
		</div>
        <% end %>

		<% if link_permission_require('statistics','index') %>
		<div class="div-sub-mn" url="<%=url_for(:controller => 'statistics', :action => 'index')%>">
		<table cellpadding="0" cellspacing="0">
			<tr>
				<td rowspan="2" width="30px" align="center"><%= image_tag "menu_icon/statistic.png" %></td>
				<td><span class="mn-name">Agents Report</span></td>
			</tr>
			<tr>
				<td><span class="title2">Show calls or keywords report for each agent</span></td>
			</tr>
		</table>
		</div>
        <% end %>

		<% if link_permission_require('keywords','index') and Aohs::MOD_KEYWORDS %>
		<div class="div-sub-mn" url="<%=url_for(:controller => 'keywords',:action => 'index')%>">
		<table cellpadding="0" cellspacing="0">
			<tr>
				<td rowspan="2" width="30px" align="center"><%= image_tag "menu_icon/keyword.png" %></td>
				<td><span class="mn-name">Keywords Report</span></td>
			</tr>
			<tr>
				<td><span class="title2">Show keyword statistics and maintenance keywords</span></td>
			</tr>
		</table>
		</div>
        <% end %>
	</div>
</div>